<!-- res/drawable/border_background.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 设置背景色 -->
    <solid android:color="#f9f9f7" /> <!-- 例如白色背景 -->

    <!-- 设置边框 -->
    <stroke
        android:width="2dp"
        android:color="#fff" /> <!-- 边框颜色，例如红色 -->

    <!-- 可选：设置圆角 -->
    <corners android:radius="0dp" /> <!-- 圆角半径 -->
</shape>
